<% if user_signed_in? %>
    <%= render 'render/head' %>
<% else %>
    <%= render 'render/reg' %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
          <%= devise_error_messages! %>

            <div class="form-group">
              <label class="control-label" for="focusedInput">Email</label>
              <input class="form-control" id="focusedInput" type="email" name="user[email]">
            </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput">Имя</label>
            <input class="form-control" id="focusedInput" type="name" name="user[name]">
          </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput">Фамилия</label>
            <input class="form-control" id="focusedInput" type="surname" name="user[surname]">
          </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput">Пароль</label>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <input class="form-control" id="focusedInput" type="password" name="user[password]"  autocomplete="off">
          </div>

          <div class="form-group">
            <label class="control-label" for="focusedInput">Подтверждение пароля</label>
            <input class="form-control" id="focusedInput" type="password" name="user[password_confirmation]"  autocomplete="off">
          </div>
            <div class="form-group">
              <label class="control-label" for="focusedInput">Краткая информация</label>
              <textarea class="form-control" rows="3" id="textArea" name="user[info]"></textarea>
            </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput">Адрес</label>
            <input class="form-control" id="focusedInput" type="address" name="user[address]">
          </div>
            <div class="form-group">
              <%= f.label :avatar %><br>
              <%= f.file_field :avatar %><br>
              <%= f.hidden_field :avatar_cache %>
            </div>

          <div class="actions">
            <button type="submit" class="btn btn-primary"> Регистрация </button>
          </div>
        <% end %>
    </div>
    </div>
</div>